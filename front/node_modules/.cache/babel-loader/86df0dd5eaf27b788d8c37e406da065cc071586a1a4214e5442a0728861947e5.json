{"ast":null,"code":"import axios from 'axios';\nimport HeaderView from './components/HeaderView.vue';\nimport FooterView from './components/FooterView.vue';\nimport ModalLogin from './components/Modal/ModalLogin.vue';\nimport ModalProfile from './components/Modal/ModalProfile.vue';\nimport MainHome from './components/Home/MainHome.vue';\nexport default {\n  name: \"App\",\n  data() {\n    return {\n      MainMenu: 'home',\n      modalStatus: false,\n      user_id: sessionStorage.getItem('user_id')\n    };\n  },\n  mounted() {\n    this.loadTheme();\n  },\n  methods: {\n    openModal() {\n      this.modalStatus = true;\n    },\n    async loadTheme() {\n      console.log(this.$BackURl);\n      try {\n        const response = await axios.get(`${this.$BackURl}/Theme`);\n        const data = response.data;\n        if (data.status === 'success') {\n          this.updateTheme(data.res[0].url);\n        } else {\n          console.error('Failed to load theme:', data.message);\n        }\n      } catch (error) {\n        console.error('Error fetching theme:', error);\n      }\n    },\n    updateTheme(url) {\n      const linkTag = document.querySelector(\"link[rel=stylesheet]\");\n      if (linkTag) {\n        linkTag.href = url;\n      } else {\n        const newLinkTag = document.createElement(\"link\");\n        newLinkTag.rel = \"stylesheet\";\n        newLinkTag.href = url;\n        document.head.appendChild(newLinkTag);\n      }\n      setTimeout(() => {\n        document.getElementById('loading').style.display = 'none';\n      }, 300);\n    },\n    updateMainMenu(newMainMenu) {\n      this.MainMenu = newMainMenu;\n    }\n  },\n  components: {\n    HeaderView,\n    ModalLogin,\n    FooterView,\n    ModalProfile,\n    MainHome\n  }\n};","map":{"version":3,"names":["axios","HeaderView","FooterView","ModalLogin","ModalProfile","MainHome","name","data","MainMenu","modalStatus","user_id","sessionStorage","getItem","mounted","loadTheme","methods","openModal","console","log","$BackURl","response","get","status","updateTheme","res","url","error","message","linkTag","document","querySelector","href","newLinkTag","createElement","rel","head","appendChild","setTimeout","getElementById","style","display","updateMainMenu","newMainMenu","components"],"sources":["/var/www/front/src/App.vue"],"sourcesContent":["<template>\n  <div id=\"app\">\n    <!-- header -->\n    <div class=\"header\">\n      <HeaderView @updateMainMenu=\"updateMainMenu\" @openModal=\"openModal\" :MainMenu=\"MainMenu\"/>\n    </div>\n    <div class=\"body\">\n      <MainHome/>\n    </div>\n    <!-- footer -->\n    <div class=\"footer\">\n      <FooterView/>\n    </div>\n\n\n    <!-- Modal -->\n    <div v-if=\"modalStatus\" class=\"modal\" style=\"display: block;\" tabindex=\"-1\" role=\"dialog\">\n      <div class=\"modal-dialog\" role=\"document\">\n      <div class=\"modal-content\">\n        <div style=\"display: flex;justify-content: flex-end;\">\n          <button type=\"button\" class=\"btn-close\" @click=\"this.modalStatus = false\" aria-label=\"Close\"></button>\n        </div>\n        <ModalLogin v-if=\"!user_id\"/>\n        <ModalProfile v-else/>\n        </div>\n      </div>\n    </div>\n    <!-- loading -->\n    <div id=\"loading\"><h1 class=\"text-success\" style=\"font-weight:bold;\">Loading...</h1></div>\n  </div>\n</template>\n\n<script>\nimport axios  from 'axios';\nimport HeaderView from './components/HeaderView.vue';\nimport FooterView from './components/FooterView.vue';\nimport ModalLogin from './components/Modal/ModalLogin.vue';\nimport ModalProfile from './components/Modal/ModalProfile.vue';\nimport MainHome from './components/Home/MainHome.vue';\n\nexport default {\n  name: \"App\",\n  data() {\n    return{\n      MainMenu: 'home',\n      modalStatus: false,\n      user_id: sessionStorage.getItem('user_id'),\n    }\n  },\n  mounted() {\n    this.loadTheme();\n  },\n  methods: {\n    openModal() {\n      this.modalStatus = true;\n    },\n    async loadTheme() {\n      console.log(this.$BackURl)\n      try {\n        const response = await axios.get(`${this.$BackURl}/Theme`);\n        const data = response.data;\n\n        if (data.status === 'success') {\n          this.updateTheme(data.res[0].url);\n        } else {\n          console.error('Failed to load theme:', data.message);\n        }\n      } catch (error) {\n        console.error('Error fetching theme:', error);\n      }\n    },\n    updateTheme(url) {\n      const linkTag = document.querySelector(\"link[rel=stylesheet]\");\n      if (linkTag) {\n        linkTag.href = url;\n      } else {\n        const newLinkTag = document.createElement(\"link\");\n        newLinkTag.rel = \"stylesheet\";\n        newLinkTag.href = url;\n        document.head.appendChild(newLinkTag);\n      }\n      setTimeout(() => {\n        document.getElementById('loading').style.display = 'none';  \n      }, 300);\n      \n    },\n    updateMainMenu(newMainMenu) {\n      this.MainMenu = newMainMenu;\n    },\n  },\n  components: {\n    HeaderView,\n    ModalLogin,\n    FooterView,\n    ModalProfile,\n    MainHome,\n  }\n};\n</script>\n\n<style>\n/* 데스크탑 스타일 */\n@media (min-width: 1024px) {\n  .header, .body, .footer {\n    padding: 0 200px;\n  }\n}\n\n/* 태블릿 스타일 */\n@media (min-width: 768px) and (max-width: 1023px) {\n  .header, .body, .footer {\n    padding: 0 50px;\n  }\n}\n\n/* 모바일 스타일 */\n@media (max-width: 767px) {\n  .header, .body, .footer {\n    padding: 0 20px;\n  }\n\n  .modal-dialog {\n    max-width: 90%;\n  }\n\n}\n\n#loading {\n  position: fixed;\n  top: 0;\n  left: 0;\n  width: 100%;\n  height: 100%;\n  background: white;\n  color: black;\n  display: flex;\n  justify-content: center;\n  align-items: center;\n  z-index: 1000;\n}\n\n.modal {\n  display: flex;\n  justify-content: center;\n  align-items: center;\n  position: fixed;\n  top: 0;\n  left: 0;\n  width: 100%;\n  height: 100%;\n  background: rgba(0, 0, 0, 0.5);\n  z-index: 1050;\n}\n\n.modal-dialog {\n  max-width: 500px;\n}\n\n.modal-content {\n  padding: 20px;\n}\n</style>\n"],"mappings":"AAiCA,OAAOA,KAAI,MAAQ,OAAO;AAC1B,OAAOC,UAAS,MAAO,6BAA6B;AACpD,OAAOC,UAAS,MAAO,6BAA6B;AACpD,OAAOC,UAAS,MAAO,mCAAmC;AAC1D,OAAOC,YAAW,MAAO,qCAAqC;AAC9D,OAAOC,QAAO,MAAO,gCAAgC;AAErD,eAAe;EACbC,IAAI,EAAE,KAAK;EACXC,IAAIA,CAAA,EAAG;IACL,OAAM;MACJC,QAAQ,EAAE,MAAM;MAChBC,WAAW,EAAE,KAAK;MAClBC,OAAO,EAAEC,cAAc,CAACC,OAAO,CAAC,SAAS;IAC3C;EACF,CAAC;EACDC,OAAOA,CAAA,EAAG;IACR,IAAI,CAACC,SAAS,CAAC,CAAC;EAClB,CAAC;EACDC,OAAO,EAAE;IACPC,SAASA,CAAA,EAAG;MACV,IAAI,CAACP,WAAU,GAAI,IAAI;IACzB,CAAC;IACD,MAAMK,SAASA,CAAA,EAAG;MAChBG,OAAO,CAACC,GAAG,CAAC,IAAI,CAACC,QAAQ;MACzB,IAAI;QACF,MAAMC,QAAO,GAAI,MAAMpB,KAAK,CAACqB,GAAG,CAAC,GAAG,IAAI,CAACF,QAAQ,QAAQ,CAAC;QAC1D,MAAMZ,IAAG,GAAIa,QAAQ,CAACb,IAAI;QAE1B,IAAIA,IAAI,CAACe,MAAK,KAAM,SAAS,EAAE;UAC7B,IAAI,CAACC,WAAW,CAAChB,IAAI,CAACiB,GAAG,CAAC,CAAC,CAAC,CAACC,GAAG,CAAC;QACnC,OAAO;UACLR,OAAO,CAACS,KAAK,CAAC,uBAAuB,EAAEnB,IAAI,CAACoB,OAAO,CAAC;QACtD;MACF,EAAE,OAAOD,KAAK,EAAE;QACdT,OAAO,CAACS,KAAK,CAAC,uBAAuB,EAAEA,KAAK,CAAC;MAC/C;IACF,CAAC;IACDH,WAAWA,CAACE,GAAG,EAAE;MACf,MAAMG,OAAM,GAAIC,QAAQ,CAACC,aAAa,CAAC,sBAAsB,CAAC;MAC9D,IAAIF,OAAO,EAAE;QACXA,OAAO,CAACG,IAAG,GAAIN,GAAG;MACpB,OAAO;QACL,MAAMO,UAAS,GAAIH,QAAQ,CAACI,aAAa,CAAC,MAAM,CAAC;QACjDD,UAAU,CAACE,GAAE,GAAI,YAAY;QAC7BF,UAAU,CAACD,IAAG,GAAIN,GAAG;QACrBI,QAAQ,CAACM,IAAI,CAACC,WAAW,CAACJ,UAAU,CAAC;MACvC;MACAK,UAAU,CAAC,MAAM;QACfR,QAAQ,CAACS,cAAc,CAAC,SAAS,CAAC,CAACC,KAAK,CAACC,OAAM,GAAI,MAAM;MAC3D,CAAC,EAAE,GAAG,CAAC;IAET,CAAC;IACDC,cAAcA,CAACC,WAAW,EAAE;MAC1B,IAAI,CAAClC,QAAO,GAAIkC,WAAW;IAC7B;EACF,CAAC;EACDC,UAAU,EAAE;IACV1C,UAAU;IACVE,UAAU;IACVD,UAAU;IACVE,YAAY;IACZC;EACF;AACF,CAAC","ignoreList":[]},"metadata":{},"sourceType":"module","externalDependencies":[]}